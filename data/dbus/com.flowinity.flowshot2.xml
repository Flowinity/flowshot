<!DOCTYPE node PUBLIC "-//freedesktop//DTD D-BUS Object Introspection 1.0//EN" "http://www.freedesktop.org/standards/dbus/1.0/introspect.dtd">
<node>
  <interface name="com.flowinity.flowshot2">

    <!--
       captureScreen:
       @captureMode: Desired mode of capture.

       Allow the user to capture a screenshot over DBus.
    -->
    <method name="captureScreen">
      <arg name="captureMode" type="q" direction="in"/>
    </method>

    <!--
       uploadFile:
       @path: Absolute path of file upload.

       Allows the user to upload to Flowinity over DBus.
    -->
    <method name="uploadFile">
      <arg name="path" type="s" direction="in"/>
    </method>

    <!--
       compressAndUploadFolder:
       @path: Absolute path of file upload.

       Allows the user to upload to Flowinity over DBus.
    -->
    <method name="compressAndUploadFolder">
      <arg name="path" type="s" direction="in"/>
    </method>
  </interface>
</node>
